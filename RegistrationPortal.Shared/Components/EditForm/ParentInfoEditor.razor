<div class="mt-3 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-6">
    <div class="sm:col-span-2 sm:col-start-1">
        <label class="block text-sm font-medium leading-6 text-gray-900">Parent First Name</label>
        <div class="mt-1">
            <InputText type="text" @bind-Value="ParentInfo.ParentFirstName" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-cyan-600 sm:text-sm sm:leading-6" />
            <ValidationMessage For="@(() => ParentInfo.ParentFirstName)" />
        </div>
    </div>

    <div class="sm:col-span-2">
        <label class="block text-sm font-medium leading-6 text-gray-900">Parent Last Name</label>
        <div class="mt-1">
            <InputText type="text" @bind-Value="ParentInfo.ParentLastName" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-cyan-600 sm:text-sm sm:leading-6" />
            <ValidationMessage For="@(() => ParentInfo.ParentLastName)" />
        </div>
    </div>

    <div class="sm:col-span-2">
        <label class="block text-sm font-medium leading-6 text-gray-900">Parent Phone Number</label>
        <div class="mt-1 rounded-md shadow-sm">
            <InputText type="text" @bind-Value="ParentInfo.ParentPhoneNumber" class="block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-cyan-600 sm:text-sm sm:leading-6" placeholder="(012) 345-6789" />
            <ValidationMessage For="@(() => ParentInfo.ParentPhoneNumber)" />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ParentInfoDto ParentInfo { get; set; }
}
