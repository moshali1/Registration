                    <div class="flex gap-x-3">
                        <div class="flex h-6 items-center">
                            <InputCheckbox @bind-Value="form.AgreedToTerms" class="h-4 w-4 rounded border-gray-300 text-cyan-700 focus:ring-cyan-600" />
