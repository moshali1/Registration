<li class="col-span-1 divide-y divide-gray-200 rounded-lg bg-white shadow">
    <div class="flex w-full items-center justify-between space-x-6 p-5">
        <div class="flex-1">
            <div class="flex items-center space-x-3">
                <h3 class="truncate text-sm font-medium text-gray-900">@((activeTab == 'I') ? "ID Upload Info" : "Photo Upload Info")</h3>
                <span class="hidden lg:block inline-flex flex-shrink-0 items-center rounded-full bg-amber-50 px-1.5 py-0.5 text-xs font-medium text-amber-700 ring-1 ring-inset ring-amber-600/20">FAQ</span>
            </div>
            @if (activeTab == 'I')
            {
                <ul class="pl-4 list-disc mt-1 text-wrap text-sm text-gray-600 font-medium">
                    <li>Acceptable documents: <span class="font-bold">passport, birth certificate, driver's license, or any state-issued ID.</span></li>
                    <li>The ID must belong to the <span class="font-bold">competitor</span>, not the parent.</li>
                    <li>The ID must include the competitor's name and date of birth.</li>
                    <li>Usage: The ID will be used to verify the competitor's identity and validate the form submission.</li>
                </ul>
            }
            else if (activeTab == 'P')
            {
                <ul class="pl-4 list-disc mt-1 text-wrap text-sm text-gray-600 font-medium">
                    <li>Photo type: <span class="font-bold">High-quality, passport-style photograph.</span></li>
                    <li>Background: <span class="font-bold">Bright and uncluttered</span>, free from objects, trees, etc.</li>
                    <li>Ensure the image <span class="font-bold">captures only the face</span>, clearly visible in a well-lit setting. The face should not be cropped or blurred.</li>
                    <li>The photo must be a <span class="font-bold">standalone image</span>, not part of an ID.</li>
                    <li>Usage: The photo will be displayed during the competition.</li>
                </ul>
            }
        </div>
    </div>
    <div>
        <div class="-mt-px flex divide-x divide-gray-200">
            <div class="flex w-0 flex-1">
                <button @onclick="() => SetActiveTab('I')" class="-mr-px inline-flex w-0 flex-1 items-center justify-center gap-x-3 rounded-bl-lg border border-transparent py-4 text-sm text-gray-900 @((activeTab == 'I') ? "font-bold" : "")">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="h-5 w-5 text-gray-400" width="16" height="16">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
                    </svg>
                    ID Requirements
                </button>
            </div>
            <div class="-ml-px flex w-0 flex-1">
                <button @onclick="() => SetActiveTab('P')" class="inline-flex w-0 flex-1 items-center justify-center gap-x-3 rounded-br-lg border border-transparent py-4 text-sm text-gray-900 @((activeTab == 'P') ? "font-bold" : "")">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="h-5 w-5 text-gray-400" width="16" height="16">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                    </svg>
                    Photo Requirements
                </button>
            </div>
        </div>
    </div>
</li>

@code {
    private char activeTab = 'I'; // Default to ID Requirements

    private void SetActiveTab(char tab)
    {
        activeTab = tab;
    }
}
