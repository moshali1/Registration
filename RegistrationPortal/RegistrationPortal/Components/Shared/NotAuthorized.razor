@inject NavigationManager navManager

<div class="flex justify-center">
    <div class="xl:w-2/3 lg:w-4/5">
        <div class="flex">
            <div class="flex-1">
                <div class="font-semibold text-lg mb-2">Authorization Required</div>
                <p>
                    You are not authorized to access this section.
                </p>
            </div>
            <div class="flex-initial">
                <button class="p-1 bg-red-500 hover:bg-red-700 focus:outline-none focus:ring" @onclick="ClosePage"></button>
            </div>
        </div>
    </div>
</div>

@code {
    private void ClosePage()
    {
        navManager.NavigateTo("/");
    }
}
